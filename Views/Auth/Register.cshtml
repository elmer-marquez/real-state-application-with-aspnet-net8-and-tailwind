@using RealStateApplication.Models.ViewModels.Auth;
@model RegisterViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
}

<section class="py-10">
    <h1 class="text-4xl my-10 font-extrabold text-center">Bienes <span class="font-normal">Raices</span></h1>
    <h2 class="text-center text-2xl font-extrabold">@ViewData["Title"]</h2>
    <div class="mt-8 mx-auto max-w-md">
        <div class="bg-white py-8 px-6 shadow">
            <form asp-controller="Auth" asp-action="register" method="post">

                <div asp-validation-summary="ModelOnly" class="text-red-400"></div>

                <div class="mb-4">
                    <label asp-for="FullName" class="text-sm uppercase text-gray-500 mb-1 font-bold"></label>
                    <input type="text" asp-for="FullName" class="w-full px-3 py-3 border border-gray-300 rounded-md placeholder-gray-400" />
                    <span asp-validation-for="FullName" class="text-red-400"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="text-sm uppercase text-gray-500 mb-1 font-bold"></label>
                    <input type="email" asp-for="Email" class="w-full px-3 py-3 border border-gray-300 rounded-md placeholder-gray-400" />
                    <span asp-validation-for="Email" class="text-red-400"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="text-sm uppercase text-gray-500 mb-1 font-bold"></label>
                    <input type="password" asp-for="Password" class="w-full px-3 py-3 border border-gray-300 rounded-md placeholder-gray-400" />
                    <span asp-validation-for="Password" class="text-red-400"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="text-sm uppercase text-gray-500 mb-1 font-bold"></label>
                    <input type="password" asp-for"ConfirmPassword" class="w-full px-3 py-3 border border-gray-300 rounded-md placeholder-gray-400" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-400"></span>
                </div>

                <div class="mb-6 mt-8">
                    <input type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-2 cursor-pointer" />
                </div>

                <div class="text-center text-sm text-gray-400">
                    <p>
                        Ya tienes una cuenta? <a asp-controller="auth" asp-action="login" class="text-center text-sm text-indigo-400 hover:text-indigo-500">Iniciar Sesion</a>
                    </p>
                    <p>
                        Olvidaste tu contraseña? <a asp-controller="auth" asp-action="forgot-my-password" class="text-center text-sm text-indigo-400 hover:text-indigo-500">Recuperar Contraseña</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
</section>